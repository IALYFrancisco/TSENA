@model TSENA.Models.User;

@{
    ViewData["title"] = "Inscription";
    Layout = "_AuthenticationLayout";
}

<form method="POST" asp-controller="User" asp-action="Register">
	<fieldset>
		<legend>Inscription</legend>
		<div class="element">
			<label for="user_name">Saisissez votre nom</label>
			<input asp-for="Name" type="text" name="user_name" id="user_name" required placeholder="example: John Doe">
		</div>
		<div class="element">
			<label for="user_email">Saisissez votre email</label>
			<input asp-for="Email" type="email" name="user_email" id="user_email" required placeholder="example@gmail.com">
		</div>
		<div class="element">
			<label for="user_password">Saisissez votre mot de passe</label>
			<input asp-for="Password" type="password" name="user_password" id="user_password" required placeholder="votre mot de passe">
		</div>
		<div class="button-container">
			<button>soumettre</button>
		</div>
	</fieldset>
</form>

@if (ViewData["Error"] != null)
{
    <p style="color: red;">@ViewData["Error"]</p>
}