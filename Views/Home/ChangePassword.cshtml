@model TSENA.Models.ChangePasswordModel

@{
    ViewData["Title"] = "Changement de mot de passe";
    Layout = "_HomeLayout";
}

<form method="POST" asp-action="ChangePassword" id="change-password">
    <h2>Changement mot de passe</h2>
	<div class="element">
		<label for="CurrentPassword">Ancien mot de passe</label>
		<input asp-for="CurrentPassword" type="password" name="CurrentPassword" id="CurrentPassword" required placeholder="votre mot de passe actuel">
	</div>
	<div class="element">
		<label for="NewPassword">Nouveau mot de passe</label>
		<input asp-for="NewPassword" type="password" name="NewPassword" id="NewPassword" required placeholder="le nouveau mot de passe">
	</div>
	<div class="element">
		<label for="ConfirmPassword">Confirmez le nouveau mot de passe</label>
		<input asp-for="ConfirmPassword" type="password" name="ConfirmPassword" id="ConfirmPassword" required placeholder="le mÃªme mot de passe du dessus">
	</div>
	<div class="button-container">
		<button>changer le mot de passe</button>
	</div>
</form>